---
import Layout from "../layouts/Layout.astro";
import Project from "../components/Project.astro";

import sections from "../data/projects.json";
---

<script>
  import "../scripts/colours.ts";
</script>

<Layout title="Hi, my name's Ethan.">
  <main>
    <div class="title">Hi, my name's Ethan.</div>
    <div class="subtitle">
      I like making software, games, and other cool things.
    </div>
    <div class="socials">
      <div class="social-item"><a
        href="https://github.com/EthanDenny/"
        title="Github: EthanDenny"
        target="_blank"
        rel="noopener noreferrer">
        <img src="/github.svg" height="48"/>
      </a></div>
      <div class="social-item"><a
        href="https://www.linkedin.com/in/ethan-denny-709/"
        title="LinkedIn: ethan-denny-709"
        target="_blank"
        rel="noopener noreferrer">
        <img src="/linkedin.svg" height="48"/>
      </a></div>
      <div class="social-item"><a
        href="https://twitter.com/ethandenny709"
        title="Twitter: ethandenny709"
        target="_blank"
        rel="noopener noreferrer">
        <img src="/twitter.svg" height="48"/>
      </a></div>
    </div>
    {
      sections.map((section) => (
        <>
          <div class="section-title">{section.title}</div>
          <div class="projects-grid">
            {section.projects.map((project) => (
              <Project
                title={project.title}
                body={project.body}
                href={project.href}
                techs={project.techs}
              />
            ))}
          </div>
        </>
      ))
    }
    <a
      class="attribution"
      href="https://www.flaticon.com/free-icons/wave"
      title="wave icons"
      target="_blank"
      rel="noopener noreferrer">Wave icons created by Ayub Irawan - Flaticon
    </a>
    <a
      class="attribution"
      href="http://creativecommons.org/licenses/by/3.0/"
      title="wave icons"
      target="_blank"
      rel="noopener noreferrer">Social media icons by Icons By Alfredo (https://www.iconfinder.com/AlfredoCreates) (CC BY 3.0)
    </a>
  </main>
</Layout>

<style>
  body {
    display: flex;
    justify-content: center;
  }
  main {
    display: flex;
    max-width: 900px;
    margin: 1.5rem;
    flex-wrap: wrap;
  }
  .title {
    margin-top: 1rem;
    width: 100%;
    height: auto;

    font-weight: 600;
    font-size: 48px;

    color: #000000;
  }
  .subtitle {
    margin: 1.75rem 0;
    width: 100%;
    height: auto;

    font-weight: 400;
    font-size: 32px;

    color: #000000;
  }
  .socials {
    display: flex;
    flex-direction: row;

    margin: .5rem 0 -.25rem 0;
    width: 100%;
    height: auto;

    font-weight: 400;
    font-size: 32px;

    color: #000000;
  }
  .social-item {
    margin-right: 1rem;
    width: fit-content;
    text-decoration: none;
    transition: transform 0.2s;
  }
  .social-item:hover {
    transform: scale(
      1.2
    );
  }
  .section-title {
    margin: 2rem 0;
    width: 100%;
    height: auto;

    font-weight: 550;
    font-size: 36px;

    color: #000000;
  }
  .projects-grid {
    margin: 1rem 0;
    width: 100%;
    height: auto;

    gap: 2rem;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }
  .attribution {
    margin-top: 1.5rem;
    margin-left: 1rem;
    width: 100%;
    height: auto;
  }
</style>
