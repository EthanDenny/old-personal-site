---
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="project-card">
	<div class="project-title">{title}</div>
	<div class="project-description">{body}</div>
	<a href={href} target="_blank" rel="noopener noreferrer">GitHub</a>
</div>

<style>
	.project-card {
		width: 418px;
		height: 254px;

		background: #FFFFFF;
		box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
		border-radius: 32px;
	}
	.project-title {
		position: relative;
		width: 338px;
		height: 39px;
		left: 40px;
		top: 40px;

		font-weight: 500;
		font-size: 32px;
		line-height: 39px;
		/* identical to box height */

		color: #000000;
	}
	.project-description {
		position: relative;
		width: 338px;
		height: 58px;
		left: 40px;
		top: 63px;

		font-weight: 400;
		font-size: 24px;
		line-height: 29px;

		color: #000000;
	}
	.project-card > a {
		position: relative;
		width: 338px;
		height: 29px;
		left: 40px;
		top: 82px;

		font-weight: 400;
		font-size: 24px;
		line-height: 29px;
		/* identical to box height */
		text-decoration-line: underline;

		color: #0077FF;
	}
</style>
