---
export interface Props {
	title: string;
	body: string;
	href: string;
	techs: string;
}

const { href, title, body, techs } = Astro.props;
---

<div class="project-card">
	<a href={href} target="_blank" rel="noopener noreferrer">
		<div class="inner">
			<div class="project-title">{title}</div>
			<div class="project-description">{body}</div>
			<div class="project-techs">{techs}</div>
		</div>
	</a>
</div>

<style>
	.project-card {
		width: 450px;
		height: 254px;
	}
	.inner {
		position: relative;
		width: 418px;
		height: 254px;
		left: 16px;

		background: #FFFFFF;
		box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.25);
		border-radius: 32px;

		transition: transform .2s;
	}
	.inner:hover {
		transform: scale(1.1); /* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
	}
	.project-title {
		position: relative;
		width: 338px;
		height: 39px;
		left: 40px;
		top: 40px;

		font-weight: 500;
		font-size: 32px;
		line-height: 39px;
		/* identical to box height */

		color: #000000;
	}
	.project-description {
		position: relative;
		width: 338px;
		height: 58px;
		left: 40px;
		top: 63px;

		font-weight: 400;
		font-size: 24px;
		line-height: 29px;

		color: #000000;
	}
	.project-techs {
		position: relative;
		width: 338px;
		height: 58px;
		left: 40px;
		top: 94px;

		font-weight: 425;
		font-size: 24px;
		line-height: 29px;

		color: #000000;
	}
	a {
		text-decoration: none;
	}
</style>
